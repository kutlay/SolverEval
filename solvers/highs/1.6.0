# Use an official Python runtime as a parent image
FROM python:3.11-slim

# Install required packages for building Highs
RUN apt-get update && \
    apt-get install -y \
    build-essential \
    cmake \
    wget \
    libz-dev \
    libbz2-dev \
    liblzma-dev && \
    git && \
    apt-get clean

RUN apt-get install -y git

COPY /requirements.txt requirements.txt
# Install Pyomo and pytest
RUN pip3 install -r requirements.txt

# Copy the application files
COPY / /app
WORKDIR /app

RUN pip3 install -e .

WORKDIR /app/solver_eval

# Install Highs 1.6.0
RUN git clone --depth 1 --branch v1.6.0 "https://github.com/ERGO-Code/HiGHS.git" highs && \
    cd highs && \
    pip install .

ENV SOLVEREVAL_SOLVER "highs"
ENV SOLVEREVAL_SOLVER_VERSION "1.6.0"

CMD ["python3", "test_all.py"]
